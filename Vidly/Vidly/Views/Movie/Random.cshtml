@model Vidly.ViewModel.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    var className = Model.coustomers.Count > 5 ? "popular" : null;
}

<h2 class="@className">@Model.Movie.Name</h2>
@if (Model.coustomers.Count == 0)
            {
                <text>No one has rented this movie before.</text>
            }
else
{
<ul>
    @foreach (var coustomer in Model.coustomers)
                {
                    <li>@coustomer.Name</li>
                }
</ul>
}